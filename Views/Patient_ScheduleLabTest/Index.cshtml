

@section Styles{
    <link href="@Url.Content("~/Content/assets/vendors/custom/datatables/datatables.bundle.css")" rel="stylesheet" type="text/css" />
}

@section Scripts{

    <script src="~/Content/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script src="~/Scripts/Employee/General.js" type="text/javascript"></script>
    

}


<!-- begin:: Content Head -->
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title"><span><img src="~/Content/assets/media/med360/schedule.png" class="mr-3" style="width: 30px;"></span>Schedule Lab Test</h3>

    </div>
   
</div>
<!-- end:: Content Head -->
<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="kt-portlet">
        <div class="kt-portlet__body">
            <form class="kt-form">
                <div class="form-group row">

                    <div class="col-md-3">
                        <label>MR No</label>
                        <input class="form-control" type="text">
                    </div>
                    <div class="col-md-3">
                        <label>Patient Name</label>
                        <input class="form-control" type="text">

                    </div>
                </div>

                <div class="form-group row">

                    <div class="col-md-6">
                        <label>Referring Provider</label>
                        <select class="form-control">
                            <option>Choose One</option>
                            <option>Dr Shoaib</option>
                            <option>Dr Tahir Alone</option>

                        </select>
                    </div>
                </div>
                <div class="form-group row">

                    <div class="col-md-6">
                        <label>Test Type</label>
                        <select class="form-control">
                            <option>Choose One</option>
                            <option>Pulmonology</option>
                            <option>Radiology</option>

                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <label>Test Name</label>
                        <div class="kt-input-icon kt-input-icon--right">
                            <input type="text" class="form-control" placeholder="" id="PatientName">
                            <span class="kt-input-icon__icon kt-input-icon__icon--right">
                                <span><i class="la la-search"></i></span>
                            </span>
                        </div>
                    </div>
                </div>
                    <div class="form-group row">

                        <div class="col-md-3">
                            <label>Date</label>
                            <input class="form-control" type="date" id="example-datetime-local-input">
                        </div>
                        <div class="col-md-3">
                            <label>Time</label>

                            <input class="form-control" type="time" value="13:45:00" id="Time">
                        </div>
                    </div>


                    <div class="kt-portlet__foot kt-portlet__foot--fit-x">
                        <div class="kt-form__actions">
                            <div class="row">
                                <div class="col-md-9"></div>
                                <div class="col-md-3 kt-align-right">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-times"></i>Close</button>
                                    <button type="button" class="btn btn-info"><i class="fa fa-save"></i>Save</button>
                                </div>
                            </div>
                        </div>
                    </div>

            </form>

            

          
        </div>
    </div>
</div>
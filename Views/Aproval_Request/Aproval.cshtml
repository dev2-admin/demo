
<script src="~/Content/assets/js/pages/crud/forms/widgets/bootstrap-datepicker.js" type="text/javascript"></script>
<!-- Modal -->



<div class="modal-header">
    <h5 class="kt-subheader__title"><span><img src="~/Content/assets/media/med360/change request.png" class="mr-3" style="width: 30px;"></span>Approval Request information</h5>
    <button type="button" class="close" data-dismiss="modal"></button>
</div>
<div class="modal-body">
    <div class="form-group">
        <label for="example-value-input">Requested by</label>
        <input type="text" class="form-control disabled" disabled readonly="readonly" id="Requestedby">
    </div>
    <div class="form-group">
        <label for="exampleSelectd">ActionType</label>
        <select class="form-control disabled" id="ActionType"></select>
    </div>
    <div class="form-group">
        <label for="exampleSelectd">Status</label>
        <select class="form-control disabled " id="Status"></select>
    </div>
    <div class="form-group ">
        <label for="Request">Request</label>
        <textarea class="form-control disabled" id="Request" readonly="readonly" rows="3"></textarea>

    </div>
    <div class="form-group form-group-last">
        <label for="Requested" class="col-md-2">Remarks <b style="color:red">*</b></label>
        <textarea class="form-control" id="Remarks" form-group rows="2"></textarea>

    </div>
</div>
<input type="url" class="form-control" style="visibility:hidden" id="ID">
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-times"></i>Close</button>
    <button type="button" id="btnAction" onclick="ActionButtionClick()" class="btn btn-info"><i class="fa fa-save"></i>Save</button>

</div>


                        <label>Procedure Name</label>

                        <select class="form-control" id="exampleSelect1">
                            <option></option>
                            <option>Bronchoscopy</option>
                            <option>ECG</option>
                            <option>dialysis</option>
                            <option>First Treat</option>

                        </select>

                    </div>
                    <div class="form-group col-md-6">
                        <label>Order To</label>

                        <select class="form-control" id="exampleSelect1">
                            <option></option>
                            <option>Internal</option>
                            <option>External</option>
                        </select>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="form-group col-md-6">
                        <label>Description</label>
                        <textarea class="form-control" id="exampleTextarea" form-group rows="1"></textarea>

                    </div>
                    <div class="form-group col-md-6">
                        <label>Provider Name</label>
                        <input type="text" class="form-control">

                    </div>
                </div>
                <div class="form-group row">


                    <div class="col-md-6">
                        <label>Date & Time</label>
                        <input class="form-control" type="datetime-local" value="" id="example-datetime-local-input">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Assign Room</label>

                        <select class="form-control" id="exampleSelect1">
                            <option></option>
                            <option>Exam Room-1</option>
                            <option>Exam Room-2</option>
                            <option>Bronchoscopy</option>
                        </select>

                    </div>
                </div>

                <div class="form-group row">
                    <div class="form-group  col-md-12">
                        <label for="exampleTextarea">Instructions</label>
                        <textarea class="form-control col-md-12" id="exampleTextarea" form-group rows="3"></textarea>
                    </div>
                </div>




            </div>
            <div class="kt-portlet__foot">
                <div class="kt-form__actions">

                    <div class="form-group row">
                        <div class="col-md-7">
                        </div>
                        <div class="col-md-5 kt-align-right">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-times"></i>Close</button>
                            <button type="button" class="btn btn-info"><i class="fa fa-save"></i>Save</button>
                        </div>
                    </div>
                </div>
            </div>

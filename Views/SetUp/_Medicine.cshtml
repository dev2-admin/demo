

    <!--begin::Portlet-->
    <div class="kt-portlet">
        <div class="kt-portlet__head">
            <div class="kt-portlet__head-label">

                <h3 class="kt-portlet__head-title" style="color:white">
                    @*<span> <img src="~/Content/assets/media/med360/medicine.png" class="mr-3" style="width: 30px;"></span>*@
                    Add Medicine
                </h3>

            </div>

        </div>

        <!--begin::Form-->
        <form class="kt-form">
            <div class="kt-portlet__body">
                <div class="form-group row">
                    <div class="col-md-8">
                        <label for="exampleSelect2">Medicine Name</label>
                        <select class="form-control" id="exampleSelect2">
                            <option>Search Medicine</option>
                            <option>Kestine </option>
                            <option>Ventolin Inhaler</option>
                        </select>

                    </div>
                    <div class="col-md-4">
                        <label for="exampleSelect2">Dosage</label>
                        <select class="form-control" id="exampleSelect2">
                            <option>Select Dosage</option>
                            <option>5mg</option>
                            <option>10mg</option>
                            <option>15mg</option>
                            <option>20mg</option>
                        </select>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label for="exampleSelect2">Route</label>
                        <select class="form-control" id="exampleSelect2">
                            <option>Select Route</option>
                            <option>Oral</option>
                            <option>Injection</option>
                            <option>Iv</option>

                        </select>

                    </div>
                    <div class="col-md-4">
                        <label for="exampleSelect2">Set Routine</label>
                        <input class="form-control" type="time" value="" id="example-time-input">

                    </div>
                    <div class="col-md-4">
                        <label for="exampleSelect2">Days</label>
                        <select class="form-control" id="exampleSelect2">
                            <option>Select Day</option>
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                        </select>

                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-md-6">
                        <label>Start Date</label>
                        <input class="form-control" type="date" id="Start_Date" format='dd/mm/yyyy'>
                    </div>
                    <div class="col-md-6">
                        <label>End Date</label>
                        <input class="form-control" type="date" id="example-date-input" value="">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <label for="exampleTextarea">Instructions</label>
                        <textarea class="form-control" id="exampleTextarea"></textarea>
                    </div>
                </div>



            </div>
            <div class="kt-portlet__foot">
                <div class="kt-form__actions">

                    <div class="form-group row">
                        <div class="col-md-7">
                        </div>
                        <div class="col-md-5 kt-align-right">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-times"></i>Close</button>
                            <button type="button" class="btn btn-info"><i class="fa fa-save"></i>Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <!--end::Form-->
        <!--end::Form-->
    </div>


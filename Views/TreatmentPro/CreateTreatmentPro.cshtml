
<script src="~/Content/assets/js/pages/crud/forms/widgets/bootstrap-datepicker.js" type="text/javascript"></script>
<!-- Modal -->
<script>Load_Combo_OrderType();</script>

<div class="modal-header">
    <h5 class="kt-subheader__title"><span><img src="~/Content/assets/media/med360/Treatment.png" class="mr-3" style="width: 30px;"></span>Add Treatment & Procedure</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">


    <div class="modal-body">

        <div class="form-col-12" style="display:none">
            <label>ID <b style="color:red">*</b></label>
            <input type="text" id="Notion_ID" class="form-control">
        </div>

        <div class="form-col-12">
            <label>Type <b style="color:red">*</b></label>
            <div class="kt-input-icon">
                <select class="form-control" Id="Notion_Class_ID">

                    <option>Choose One</option>

                </select>
            </div>
        </div>
        <div class="form-col-12">
            <label>Code <b style="color:red">*</b></label>
            <input type="text" id="Notion_Code" class="form-control">

        </div>

        <div class="form-col-12" style="display:none">
            <label>Order <b style="color:red">*</b></label>
            <input type="text" class="form-control">

        </div>


        <div class="form-col-12">
            <label>Name <b style="color:red">*</b></label>
            <textarea class="form-control" id="Notion_Name" form-group rows="2"></textarea>

        </div>

        <div class="form-col-12">
            <label>Price <b style="color:red">*</b></label>
            <input type="text" id="Notion_Price" class="form-control">

        </div>

        <div class="form-col-12">
            <label>Description <b style="color:red">*</b></label>
            <textarea class="form-control" id="Notion_Description" form-group rows="4"></textarea>

        </div>

        <div class="form-col-12">
            <label>Status <b style="color:red">*</b></label>
            <div class="kt-input-icon">
                <select class="form-control" Id="Notion_Status">

                    <option>Choose One</option>
                 
                        <option value="A">Active</option>
                        <option value="I">Inactive</option>
                </select>
            </div>
        </div>


    </div>


</div>




<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <button type="button" id="SaveChanges" onclick="Add()" class="btn btn-info">Save</button>
    <button type="button" id="Update" onclick="Update()" class="btn btn-info">Update</button>
    <button type="button" id="Delete" onclick="Delete()" class="btn btn-info">Delete</button>
</div>

@{

    ViewBag.PageName = "Treatment Proceedure";
}

@section Styles{
    <link href="@Url.Content("~/Content/assets/vendors/custom/datatables/datatables.bundle.css")" rel="stylesheet" type="text/css" />
}

@section Scripts{

    <script src="~/Content/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>

    <script src="~/Scripts/TreatmentPro.js" type="text/javascript"></script>
   

}
<!-- begin:: Content Head -->
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title"><span><img src="~/Content/assets/media/med360/Treatment.png" class="mr-3" style="width: 30px;"></span>Treatment Procedure</h3>

    </div>
    <div class="kt-subheader__toolbar">

        <button id="CreateTreatmentPro" type="button"data-url="@Url.Action("CreateTreatmentPro", "TreatmentPro")"  class="btn btn-info"><i class="fa fa-plus"></i>Add New Procedure</button>


    </div>
</div>
<!-- end:: Content Head -->

<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="kt-portlet">
        <div class="kt-portlet__body">
            <form class="kt-form">

                <div class="row align-items-center">
                    <div class="col-xl-12">
                        <div class="form-group m-form__group align-items-center">
                            <div class="input-group">
                                
                                <input name="filterText" autofocus="" class="form-control m-input" type="text" id="myInputTextField">
                                <span class="input-group-btn">
                                    <button class="btn btn-info"
                                            type="submit">
                                        <i class="flaticon-search-1" style="color:white;"></i>
                                    </button>
                                </span>
                            </div>
                        </div>

                    </div>
                </div>



            </form>

            <div class="row align-items-center">
                <div class="table-responsive">
                    <table id="TreatmentPro_List" class="table table-striped- table-bordered table-hover table-checkable">
                        <thead>
                            <tr>
                                <th>Actions</th>
                                <th>ID</th>
                                <th>Type</th>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Description</th>
                                <th>Status</th>


                            </tr>
                        </thead>
                     
                    </table>

                    <!--end: Datatable -->
                </div>
            </div>
        <div id='myModal' class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div id='myModalContent'></div>
                </div>
            </div>

        </div>


    </div>

   
</div>


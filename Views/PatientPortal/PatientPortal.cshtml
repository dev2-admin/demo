

@{
    ViewBag.PageName = "Patient Portal";
}

@section Styles {
    <link href="~/Content/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" />
}

@section Scripts
    {
    <script src="~/Content/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    @*<script src="~/Content/assets/js/pages/crud/datatables/advanced/Table-column-Action.js" type="text/javascript"></script>*@
    <script src="~/Content/assets/js/pages/crud/datatables/advanced/PatientPortal.js"></script>
    @*<script>
        $('td:nth-child(1),th:nth-child(1)').hide();
            
    </script>*@
}

<!-- begin:: Content Head -->
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
        <h5 class="modal-title" id="exampleModalLabel"><span><img src="~/Content/assets/media/med360/patient.png" class="mr-3" style="width: 30px;"></span>My Appointments</h5>
      
    </div>
    <div class="kt-subheader__toolbar">
        <button type="button" class="btn btn-brand btn-elevate btn-icon-sm" id="AddNew" data-toggle="modal" data-target=""><i class="fa fa-calendar-alt"></i>Schedule Appointment</button>
    </div>
</div>
<!-- end:: Content Head -->
<!-- begin:: Content -->
<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="row">
        <div class="col-md-12">
            <!--begin::Portlet-->
            <div class="kt-portlet kt-portlet--tab">

                <div class="kt-portlet__body">
                    <!--begin::Section-->
                    <div class="row align-items-center">
                        <div class="col-xl-12">
                            <div class="form-group m-form__group align-items-center">
                                <div class="input-group">
                                    <input name="filterText" autoFocus
                                           class="form-control m-input"
                                           type="text">
                                    <span class="input-group-btn">
                                        <button class="btn btn-info" type="submit">
                                            <i class="flaticon-search-1" style="color:white"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!--begin: Datatable -->
                    <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
                        <thead>
                            <tr>
                                <th>Actions</th>
                                <th>Image</th>
                                <th>Provider Name</th>
                                <th>Clinic Name</th>
                                <th>Sub Speciality</th>
                                <th>Status</th>
                                @*<th>Action</th>*@

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td nowrap></td>
                                <td>
                                    <img src="~/image/person-male.png" class="m-img-rounded kt-marginless" alt="photo" width="30" />
                                </td>
                                <td>Dr Shoaib</td>
                                <td>Genesis</td>
                                <td>Pulmonology</td>
                                
                                <td>2 </td>

                            </tr>
                            <tr>
                                <td nowrap></td>
                                <td>
                                    <img src="~/image/person-male.png" class="m-img-rounded kt-marginless" alt="photo" width="30" />
                                </td>
                                <td>Dr Shoaib</td>
                                <td>Genesis</td>
                                <td>Pulmonology</td>
                                
                                <td>1 </td>

                            </tr>

                        </tbody>
                    </table>
                    <!--end: Datatable -->

                </div>
            </div>
            <!--end::Portlet-->
        </div>


        <!-- --------Start Modal-------- -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                Change Request Information
                <div class="modal-content">
                    <div class="modal-header">
                        <label for="example-date-input" class="col-4 col-form-label">Entry Form To Do List</label>
                        <button type="button" class="close" data-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">

                        <div class="form-group form-group-last">
                            <label for="Add_task">Add Task</label>
                            <textarea class="form-control" id="Add_task" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="exampleSelectd">Type</label>
                            <select class="form-control" id="type">
                                <option>Chose one</option>
                                <option>Add Patient</option>
                                <option>Generate Appointment</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleSelectd">Set Reminder</label>
                            <select class="form-control" id="Set_Reminder">
                                <option>Chose one</option>
                                <option>30 S</option>
                                <option>40 S</option>
                            </select>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-label">Save</button>
                        <button type="reset" class="btn btn-outline-hover-danger btn-square">Cancel</button>
                    </div>
                </div>

            </div>
        </div>
        <!-- --------End Modal-------- -->


    </div>
</div>

<!-- end:: Content -->

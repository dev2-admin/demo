            </form>

            <div class="row align-items-center">
                <div class="table-responsive">
                    <table id="Employee_List" class="table table-striped table-bordered table-hover table-checkable">
                    </table>
                </div>

            </div>

            <div id='CreateOrEditModal' class="modal fade" tabindex="-1" role="dialog" aria-labelledby="CreateOrEditModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-xl" role="document">
                    <div class="modal-content">
                        <div id='CreateOrEditModalContent'></div>

                    </div>
                </div>
            </div>

            <div id='AddressModal' class="modal fade" tabindex="-1" role="dialog" aria-labelledby="AddressModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">

                            <h5 class="modal-title" id="AddressModalLabel"><span><img src="~/Content/assets/media/icons/svg/Communication/Address-card.svg" class="mr-3" style="width: 30px;"></span>Add Address</h5>
                            <button type="button" class="close" onclick="CloseAddressPopup()" id="ModalDismiss" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <div class="modal-body">

                            <div id='AddressModalContent'></div>


                        </div>



                        <div class="modal-footer">
                            <button type="button" id="Address_Close" onclick="CloseAddressPopup()" class="btn btn-secondary"><i class="fa fa-times"></i>Close</button>
                            <button type="button" class="btn btn-info" onclick="AddAddressDataToGrid()" id="SetdataAddress"><i class="fa fa-save"></i>Add</button>
                        </div>
                    </div>
                </div>

            </div>

            <div id='EducationModal' class="modal fade" tabindex="-1" role="dialog" aria-labelledby="EducationModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">

                            <h5 class="modal-title" id="EducationModalLabel"><span><img src="~/Content/assets/media/icons/svg/Communication/Address-card.svg" class="mr-3" style="width: 30px;"></span>Add Education</h5>
                            <button type="button" class="close" onclick="CloseEducationPopup()" id="EducationModalDismiss" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <div class="modal-body">

                            <div id='EducationModalContent'></div>


                        </div>



                        <div class="modal-footer">
                            <button type="button" id="EducationPopup_Close" onclick="CloseEducationPopup()" class="btn btn-secondary"><i class="fa fa-times"></i>Close</button>
                            <button type="button" class="btn btn-info" onclick="AddEducationDataToGrid()" id="SetdataEducation"><i class="fa fa-save"></i>Add</button>
                        </div>
                    </div>
                </div>

            </div>

            <div id='ExperianceModal' class="modal fade" tabindex="-1" role="dialog" aria-labelledby="ExperianceModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">

                            <h5 class="modal-title" id="ExperianceModalLabel"><span><img src="~/Content/assets/media/icons/svg/Communication/Address-card.svg" class="mr-3" style="width: 30px;"></span>Add Experiance</h5>
                            <button type="button" class="close" onclick="CloseExperiancePopup()"  aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <div class="modal-body">

                            <div id='ExperianceModalContent'></div>


                        </div>



                        <div class="modal-footer">
                            <button type="button" id="OccupationPopup_Close" onclick="CloseOccupationPopup()" class="btn btn-secondary"><i class="fa fa-times"></i>Close</button>
                            <button type="button" class="btn btn-info" onclick="AddOccupationDataToGrid()" id="SetdataEducation"><i class="fa fa-save"></i>Add</button>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
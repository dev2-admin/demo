
@{
    ViewBag.PageName = "Change Request";
}

@section Styles {
    <link href="~/Content/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" />
}

@section Scripts
    {
    <script src="~/Content/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>

    <script src="~/Scripts/ChangeRequest/ChangeRequest.js"></script>

}

<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title"><span><img src="~/Content/assets/media/med360/change request.png" class="mr-3" style="width: 30px;"></span>Change Request</h3>

    </div>
    <div class="kt-subheader__toolbar">
        <button type="button" class="btn btn-brand btn-elevate btn-icon-md" id="AddNew" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus"> </i>Add New</button>
    </div>
</div>
<!-- end:: Content Head -->
<!-- begin:: Content -->
<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="row">

        <div class="col-md-12">
            <!--begin::Portlet-->
            <div class="kt-portlet kt-portlet--tab">
                <div class="kt-portlet__body">
                    <!--begin::Section-->
                    <div class="row align-items-center">
                        <div class="col-xl-12">
                            <div class="form-group m-form__group align-items-center">
                                <div class="input-group">
                                    <input name="filterText" id="filterText" autoFocus class="form-control m-input" type="text">
                                    <span class="input-group-btn">
                                        <button class="btn btn-info"
                                                type="submit">
                                            <i class="flaticon-search-1" style="color:white"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--begin: Datatable -->
                    <table class="table table-striped- table-bordered table-hover table-checkable" id="ChangeRequestList">
                        <thead>
                            <tr>
                                <th>Actions</th>
                                <th>Requested By</th>
                                <th>Type Of Action</th>
                                <th>Message</th>
                                <th>Remarks</th>
                                <th>Status</th>
                            </tr>
                        </thead>

                    </table>

                </div>
            </div>
            <!--end::Portlet-->
        </div>


        <!-- --------Start Modal-------- -->
        <div id="myModal" class="modal fade" role="dialog" data-keyboard="false" data-backdrop="static">
            <div class="modal-dialog modal-lg">
                @*Change Request Information*@
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="kt-subheader__title"><span><img src="~/Content/assets/media/med360/change request.png" class="mr-3" style="width: 30px;"></span>Change Request</h3>
                        <button type="button" class="close" data-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="example-value-input">Requested by</label>
                            <input type="text" class="form-control" placeholder="Requested by..." id="Requestedby">
                        </div>
                        <div class="form-group">
                            <label for="exampleSelectd">ActionType</label>
                            <select class="form-control" id="ActionType"></select>
                        </div>
                        <div class="form-group">
                            <label for="exampleSelectd">Status</label>
                            <select class="form-control disabled" id="Status"></select>
                        </div>
                        <div class="form-group form-group-last">
                            <label for="exampleTextarea">Request</label>
                            <textarea class="form-control" id="Request" rows="3"></textarea>
                            <input type="url" class="form-control" style="visibility:hidden" id="ID">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-times"></i>Close</button>
                        <button type="button" id="btnAction" onclick="ActionButtionClick()" class="btn btn-info"><i class="fa fa-save"></i>Save</button>
                    </div>
                </div>

            </div>
        </div>
        <!-- --------End Modal-------- -->


    </div>
</div>

<!-- end:: Content -->

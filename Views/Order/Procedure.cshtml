


<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="form-group row">
        <div class="col-md-12">

            <!--begin::Portlet-->
            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            <b>Add Procedure </b>

                        </h3>
                    </div>
                </div>




                <!--begin::Form-->
                <form class="kt-form">
                    <div class="kt-portlet__body  ">

                        <div class="form-group row">
                            <div class="form-group col-md-4">
                                <label>Procedure Name</label>

                                <select class="form-control" id="exampleSelect1">
                                    <option></option>
                                    <option>Bronchoscopy</option>
                                    <option>ECG</option>
                                    <option>dialysis</option>
                                    <option>First Treat</option>

                                </select>

                            </div>
                            <div class="form-group col-md-4">
                                <label>Order To</label>

                                <select class="form-control" id="exampleSelect1">
                                    <option></option>
                                    <option>Internal</option>
                                    <option>External</option>
                                </select>

                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="form-group col-md-4">
                                <label>Provider Name</label>
                                <input type="text" class="form-control">

                            </div>
                            
                            <div class="col-md-4">
                                <label>Date & Time</label>
                                <input class="form-control" type="datetime-local" value="" id="example-datetime-local-input">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="form-group col-md-4">
                                <label>Descriptions</label>
                                <textarea class="form-control" id="exampleTextarea" form-group rows="1"></textarea>

                            </div>
                            <div class="form-group col-md-4">
                                <label>Assign Room</label>

                                <select class="form-control" id="exampleSelect1">
                                    <option></option>
                                    <option>Exam Room-1</option>
                                    <option>Exam Room-2</option>
                                    <option>Bronchoscopy</option>
                                </select>

                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="form-group form-group-last col-md-5">
                                <label for="exampleTextarea">Instructions</label>
                                <textarea class="form-control" id="exampleTextarea" form-group rows="3"></textarea>
                            </div>
                        </div>
                       
                        <div class="form-group row">
                            <div class="form-group form-group-last col-md-5">
                                <label for="exampleTextarea">Add Procedure List</label>
                                <textarea class="form-control" id="exampleTextarea" form-group rows="4"></textarea>
                            </div>
                        </div>

                       
                    <div class="kt-form__actions">
                        <div class="form-group row">
                            <div class="col-md-3">
                            </div>
                            <div class="col-md-9">
                                <button type="submit" class="btn btn-success">Add</button>
                                <button type="reset" class="btn btn-danger">Clear</button>
                            </div>
                        </div>
                    </div>
                   
                    </div>
                </form>

                <!--end::Form-->
            </div>

            <!--end::Portlet-->

        </div>

    </div>
</div>




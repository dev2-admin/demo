             <select class="form-control" id="exampleSelect2">                        <option></option>                        <option>1Day</option>                        <option>2Day</option>                        <option>3Day</option>                        <option>4Day</option>                        <option>5Day</option>                        <option>6Day</option>                        <option>7Day</option>                        <option>1week</option>                        <option>2week</option>                    </select>                </div>            </div>            <div class="form-group row">                <div class="col-md-6">                    <label>Start Date</label>                    <input class="form-control" type="date" id="Start_Date" format='dd/mm/yyyy'>                </div>                <div class="col-md-6">                    <label>End Date</label>                    <input class="form-control" type="date" id="example-date-input" value="">                </div>            </div>            <div class="form-group row">                <div class="col-md-12">                    <label for="exampleTextarea">Instructions</label>                    <textarea class="form-control" id="exampleTextarea"></textarea>                </div>            </div>            @*<div class="row">                    <div class="col-3">                        <span class="kt-badge kt-badge--brand kt-badge--inline kt-badge--pill kt-badge--rounded"><b>Add +</b></span>                        <span class="kt-badge kt-badge--danger kt-badge--inline kt-badge--pill kt-badge--rounded"><b>Clear</b></span>                    </div>                </div>*@            @*<div class="row">                    <div class="form-group form-group-last col-4">                        <label for="exampleTextarea">Add Medicine List</label>                        <textarea class="form-control" id="exampleTextarea" rows="4"></text
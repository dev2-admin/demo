


<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="form-group row">
        <div class="col-md-12">

            <!--begin::Portlet-->
            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            <b>Add Exercise Order </b>

                        </h3>
                    </div>
                </div>




                <!--begin::Form-->
                <form class="kt-form">
                    <div class="kt-portlet__body  ">

                        <div class="form-group row">
                            <div class="form-group col-md-4">
                                <label>Select Exercise Type</label>

                                <select class="form-control" id="exampleSelect1">
                                    <option></option>
                                    <option>Weight Training</option>
                                    <option>Simple walk</option>
                                    <option>Cardio</option>
                                    <option>High Intensity</option>
                                    <option>Body Weight Training</option>

                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label>Exercise Name</label>
                                <input type="text" class="form-control">

                            </div>


                        </div>

                        <div class="form-group row">
                            <div class="form-group col-md-4">
                                <label>Order To</label>

                                <select class="form-control" id="exampleSelect1">
                                    <option></option>
                                    <option>Mrs XYZ</option>
                                    <option>Mr XYZ</option>
                                </select>

                            </div>
                            <div class="form-group col-md-4">
                                <label>Nurse Name</label>
                                <input type="text" class="form-control">

                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="form-group col-md-4">
                                <label>Exercise Details</label>
                                <textarea class="form-control" id="exampleTextarea" form-group rows="2"></textarea>

                            </div>
                            <div class="col-md-2">
                                <label>Start Date</label>
                                <input class="form-control" type="date" value="" id="example-datetime-local-input">
                            </div>
                            <div class="col-md-2">
                                <label>End Date</label>
                                <input class="form-control" type="date" value="" id="example-datetime-local-input">
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            
                                <div class="form-group form-group-last col-md-4">
                                    <label for="exampleTextarea">Instructions</label>
                                    <textarea class="form-control" id="exampleTextarea" form-group rows="2"></textarea>
                                </div>
                            
                            <div class="col-md-2">
                                <label for="exampleSelect2">Set Routine</label>
                                <input class="form-control" type="time" value="" id="example-time-input">

                            </div>
                            <div class="col-md-2">

                                <label for="exampleSelect2">Days</label>
                                <select class="form-control" id="exampleSelect2">
                                    <option></option>
                                    <option>1Day</option>
                                    <option>2Day</option>
                                    <option>3Day</option>
                                    <option>4Day</option>
                                    <option>5Day</option>
                                    <option>6Day</option>
                                    <option>7Day</option>
                                    <option>1week</option>
                                    <option>2week</option>
                                </select>
                            </div>
                        </div>
                            
                
                            <div class="form-group row">
                                <div class="form-group form-group-last col-md-8">
                                    <label for="exampleTextarea">Add Exercise List</label>
                                    <textarea class="form-control" id="exampleTextarea" form-group rows="4"></textarea>
                                </div>
                            </div>

                         
                            <div class="kt-form__actions">
                                <div class="form-group row">
                                    <div class="col-md-3">
                                    </div>
                                    <div class="col-md-9">
                                        <button type="submit" class="btn btn-success">Add</button>
                                        <button type="reset" class="btn btn-danger">Clear</button>
                                    </div>
                                </div>
                            </div>
                          
                        </div>
</form>

                <!--end::Form-->
            </div>

            <!--end::Portlet-->

        </div>

    </div>
</div>




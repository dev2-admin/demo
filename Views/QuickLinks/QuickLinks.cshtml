
@{
    ViewBag.PageName = "Quick Links";
}

@section Styles {
    <link href="~/Content/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" />
}

@section Scripts
    {

    <script src="~/Content/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    @*<script src="~/Content/assets/js/pages/crud/datatables/advanced/Table-column-Action.js" type="text/javascript"></script>*@
    <script src="~/Scripts/Quick Links/QuickLinks.js"></script>
}
<!-- begin:: Content Head -->
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
        <h5 class="modal-title" id="exampleModalLabel"><span><img src="~/Content/assets/media/med360/quick links.png" class="mr-3" style="width: 30px;"></span>Quick Links</h5>
    </div>
    <div class="kt-subheader__toolbar">
        <button type="button" class="btn btn-brand btn-elevate btn-icon-md" id="AddNew" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus"></i>Add New</button>
    </div>
</div>
<!-- end:: Content Head -->
<!-- begin:: Content -->
<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="row">
        <div class="col-md-12">
            <!--begin::Portlet-->
            <div class="kt-portlet kt-portlet--tab">
                <div class="kt-portlet__body">
                    <div class="row align-items-center">
                        <div class="col-xl-12">
                            <div class="form-group m-form__group align-items-center">
                                <div class="input-group">
                                    <input name="filterText" id="filterText" autoFocus class="form-control m-input" type="text">
                                    <span class="input-group-btn">
                                        <button class="btn btn-info" type="submit">
                                            <i class="flaticon-search-1" style="color:white"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>

                        </div>
                    </div>
                    <table class="table table-striped- table-bordered table-hover table-checkable" id="QuickLinksList">
                        <thead>
                            <tr>
                                <th>Actions</th>
                                <th>URL</th>
                                <th>Type</th>

                            </tr>
                        </thead>
                        @*<tbody>
                            <tr>
                                <td nowrap></td>
                                <td></td>
                                <td></td>

                            </tr>
                            <tr>
                                <td nowrap></td>
                                <td></td>
                                <td></td>

                            </tr>
                            <tr>
                                <td nowrap></td>
                                <td></td>
                                <td></td>

                            </tr>
                        </tbody>*@
                    </table>
                    <!--begin::Section-->
                   
                </div>
            </div>
            <!--end::Portlet-->
        </div>


        <!-- --------Start Modal-------- -->
        <div id="myModal" class="modal fade" role="dialog" data-keyboard="false" data-backdrop="static">
            <div class="modal-dialog modal-lg">
                Quick Links
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel"><span><img src="~/Content/assets/media/med360/quick links.png" class="mr-3" style="width: 30px;"></span>Quick Links</h5>
                        <button type="button" class="close" data-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="example-value-input">Add URL</label>
                            <input type="url" class="form-control" aria-describedby="emailHelp" id="Url">
                        </div>
                        <div class="form-group">
                            <label for="exampleSelectd">Link Type</label>
                            <select class="form-control" id="LinkType"> </select>
                            <input type="url" class="form-control" style="visibility:hidden" id="ID">
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-times"></i>Close</button>
                        <button type="button" id="btnAction" onclick="ActionButtionClick()" class="btn btn-info"><i class="fa fa-save"></i>Save</button>
                    </div>
                </div>

            </div>
        </div>
        <!-- --------End Modal-------- -->


    </div>
</div>

<!-- end:: Content -->

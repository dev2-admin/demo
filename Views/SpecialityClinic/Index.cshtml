@{
    ViewBag.PageName = "Speciality Clinic";
}
@section Styles {
    <link href="@Url.Content("~/Content/assets/vendors/custom/datatables/datatables.bundle.css")" rel="stylesheet" type="text/css" />
}

@section Scripts
{
    <script src="~/Content/assets/js/pages/crud/forms/widgets/bootstrap-datepicker.js" type="text/javascript"></script>

    <script src="@Url.Content("~/Content/assets/vendors/custom/datatables/datatables.bundle.js")"></script>
 
    <script src="@Url.Content("~/Scripts/SystemAdmin/SpecialityClinic.js")"></script>
}


@model IEnumerable<Med360.Host.Models.SpecialityClinic>



<!-- begin:: Subheader -->
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title">
            <span><img style="width:30px" class="mr-3" src="~/Content/assets/media/med360/clinic.png"></span> Speciality Clinic
        </h3>
    </div>
    <div class="kt-subheader__toolbar">

        <button id="Create" type="button" data-url="@Url.Action("Create", "SpecialityClinic")" class="btn btn-info"><i class="fa fa-plus"></i>Create New Speciality Clinic</button>
    </div>
</div>

<!-- end:: Subheader -->
<!-- begin:: Content -->
<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">


            </div>

        </div>
        <div class="kt-portlet__body">
            <!--begin: Datatable -->
            <table class="table table-striped table-bordered table-hover" id="SpecialityClinic">
                <thead>
                    <tr>
                        <th>Actions</th>
                        <th>
                            ID
                        </th>
                        <th>
                            Hospital
                        </th>
                        <th>
                            Code
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Speciality
                        </th>
                        <th>
                            Incharge
                        </th>
                        <th>
                            Entered Date
                        </th>
                        <th>
                            Entered By
                        </th>

                    </tr>
                </thead>


            </table>


            <!--end: Datatable -->
        </div>
    </div>
</div>

@*Popuo Modal*@
<div id='myModal' class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>

</div>

<!-- end:: Content -->


<script src="~/Content/assets/js/pages/crud/forms/widgets/bootstrap-datepicker.js" type="text/javascript"></script>
<!-- Modal -->
<script src="~/Scripts/SystemAdmin/Patient_Doc_Info.js"></script>
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel"><span><img src="~/Content/assets/media/med360/file.png" class="mr-3" style="width: 30px;"></span> Create Document Information</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    
    <input type="hidden" id="Tenant_ID" />
    <input type="hidden" id="Person_ID" />
    <input type="hidden" id="Person_Doc_ID" />
    <div class="form-group row">
        <div class="col-md-6">
            <label class="form-control-label">Document Name<span style="color:red;font-weight:bold">*</span>  </label>
            <input type="text" class="form-control" id="Doc_Description">

        </div>
        <div class="col-md-6">
            <label class="form-control-label">Document Type <span style="color:red;font-weight:bold">*</span></label>
            <select class="form-control" id="Doc_Type_LOV_ID">
                <option>Choose One</option>

            </select>

        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-6">
            <label class="form-control-label">Expiry Date <span style="color:red;font-weight:bold">*</span></label>
            <input type="date" class="form-control" id="Doc_Expiry_Date" />

        </div>
        <div class="col-md-6">
            <label class="form-control-label">Description<span style="color:red;font-weight:bold">*</span>  </label>
            <textarea class="form-control" id="Doc_Details"></textarea>
        </div>


    </div>

    <div class="form-group row">
        <div class="col-md-6">
            <label class="form-control-label"> Browse <span style="color:red;font-weight:bold">*</span></label>


            <input type="file" id="files" name="files" multiple="multiple" />

        </div>
        <div class="col-md-6">
            <button type="button" class="btn btn-info"><i class="fa fa-upload"></i>Upload</button>


        </div>
    </div>

</div>


<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-times"></i>Close</button>
    <button type="button"  id="SaveDI" class="btn btn-info" onclick="SaveData()"><i class="fa fa-save"></i>Save</button>
    <button type="button" id="UpdateDI" onclick="UpdateData();" class="btn btn-info" style="display:none">Update</button>
    <button type="button" id="DeleteDI" onclick="DeleleData();" class="btn btn-info" style="display:none">Delete</button>
</div>


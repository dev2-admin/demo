
@{

    ViewBag.PageName = "Employee Management";
}

@section Styles{
    <link href="@Url.Content("~/Content/assets/vendors/custom/datatables/datatables.bundle.css")" rel="stylesheet" type="text/css" />
}

@section Scripts{

    <script src="~/Content/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script src="~/Scripts/SystemAdmin/Patient.js"></script>
    <script src="~/Scripts/SystemAdmin/Patient_Doc_Info.js"></script>

    <script src="~/Scripts/SystemAdmin/Person_Address.js"></script>
}

<div id="List">
    <!-- begin:: Content Head -->
    <div class="kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title"><span><img src="~/Content/assets/media/med360/patient.png" class="mr-3" style="width: 30px;"></span>Patient</h3>

        </div>
        <div class="kt-subheader__toolbar">
            <button id="CreatePatient" type="button" data-url="@Url.Action("Patient", "Patient")" class="btn btn-info"><i class="fa fa-plus"></i>Create New Patient</button>
        </div>

    </div>
    <!-- end:: Content Head -->
    <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
        <div class="kt-portlet">
            <div class="kt-portlet__body">
                <form class="kt-form">

                    <div class="row align-items-center">
                        <div class="col-xl-12">
                            <div class="form-group m-form__group align-items-center">
                                <div class="input-group">
                                    <input name="filterText" autoFocus
                                           class="form-control m-input"
                                           type="text" id="myInputTextField">
                                    <span class="input-group-btn">
                                        <button class="btn btn-info"
                                                type="submit">
                                            <i class="flaticon-search-1" style="color:white;"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>

                        </div>
                    </div>



                </form>

                <div class="row align-items-center">
                    <table id="PatientList" class="table table-striped table-bordered table-hover table-checkable">
                        <thead>
                            <tr>
                                <th>
                                    Action
                                </th>
                                <th>
                                    MR No
                                </th>
                                <th>
                                    Patient Name
                                </th>
                                <th>
                                    Preferred Provider
                                </th>
                                <th>
                                    Country
                                </th>
                                <th>
                                    SSN
                                </th>
                                <th>
                                    CNIC

                                </th>
                                <th>
                                    Gender
                                </th>
                                <th>
                                    Emergency Contact Name
                                </th>
                                <th>
                                    Emergency Contact
                                </th>
                            </tr>
                        </thead>


                    </table>



                </div>


            </div>
        </div>
    </div>
</div>
<div id='myModal' class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>

</div>
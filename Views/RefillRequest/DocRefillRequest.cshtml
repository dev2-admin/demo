@section Scripts{

    <script type="text/javascript">

        $(document).ready(function () {

            $('#Date').datetimepicker({
                todayHighlight: true,
                autoclose: true,
                format: 'dd/MM/yyyy hh:ii'
            });
        });



    </script>


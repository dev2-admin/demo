@{

    ViewBag.PageName = "Room Management";
}

@section styles{
    <link href="~/Content/assets/vendors/custom/datatables/datatables.bundle.css" rel="stylesheet" />
}
@section Scripts
    {

    <script src="~/Scripts/RoomManagement/RoomManagement.js" type="text/javascript"></script>
    <script src="~/Content/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>

    <script type="text/javascript">
        var editurls = '@Url.Action("Create", "RoomManagementView")';

    </script>
  
}

<!-- begin:: Content Head -->
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
        <h5 class="modal-title" id="exampleModalLabel"><span><img src="~/Content/assets/media/med360/room management.png" class="mr-3" style="width: 30px;"></span>Room Management</h5>
       
    </div>
    <div class="kt-subheader__toolbar">
        <button type="button" class="btn btn-brand btn-elevate btn-icon-sm" id="btnAddRoom" data-url="@Url.Action("Create", "RoomManagementView")"><i class="fa fa-plus"></i>Add New Room</button>
       
    </div>
</div>
<!-- end:: Content Head -->


<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__body">
            <div class="row align-items-center">
                <div class="col-xl-12">
                    <div class="form-group m-form__group align-items-center">
                        <div class="input-group">
                            <input name="filterText" id="filterText" autoFocus class="form-control m-input" type="text">
                            <span class="input-group-btn">
                                <button class="btn btn-info" type="submit">
                                    <i class="flaticon-search-1" style="color:white"></i>
                                </button>
                            </span>
                        </div>
                    </div>

                </div>
            </div>
            <!--begin: Datatable -->
            <table class="table table-striped- table-bordered table-hover table-checkable" id="RoomList">
                <thead>
                    <tr>
                        <th>Actions</th>
                        <th>Speciality Clinic</th>
                        <th>Room No</th>
                        <th>Room Name</th>
                        <th>Type</th>
                        <th>Date Added</th>
                        <th>Status</th>


                    </tr>
                </thead>

            </table>

            <!--end: Datatable -->
        </div>

        <div id='myModal' class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div id='myModalContent'></div>
                </div>
            </div>

        </div>
    </div>


</div>


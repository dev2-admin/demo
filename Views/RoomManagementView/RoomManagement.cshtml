
<script src="~/Content/assets/js/pages/crud/forms/widgets/bootstrap-datepicker.js" type="text/javascript"></script>


<!--begin:: Widgets/Top Locations-->


<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel"><span><img src="~/Content/assets/media/med360/room management.png" class="mr-3" style="width: 30px;"></span>Room Management</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>


</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="RoomNo">Room No</label>
                <input type="text" class="form-control" id="RoomNo" placeholder="Room Number">

            </div>
            <div class="form-group">
                <label for="RoomName">Room Name</label>
                <input type="email" class="form-control" id="RoomName" placeholder="Room Name">
            </div>
            <div class="form-group">
                <label for="RoomType">Room Type</label>
                <select class="form-control" id="RoomType">
                    @*<option>Choose</option>
                        <option>Examination</option>
                        <option>Lab</option>
                        <option>Procedure Room</option>
                        <option>Radiology</option>
                        <option>Treatment Room</option>*@

                </select>
            </div>
            <div class="form-group">
                <label for="SpecialityClinic">Assign Speciality Clinic</label>
                <select class="form-control" id="SpecialityClinic">
                   
                </select>
            </div>
            <div class="form-group">
                <label for="Status">Status</label>
                <select class="form-control" id="Status">
                    <option value="0">Choose One</option>
                    <option value="A">Active</option>
                    <option value="I">Inactive</option>
                </select>
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-5">
            <div class="form-group">
                <label id="label">Operation Days</label>
                <div class="row" style="margin-top :1%">
                    <div class="col-6">
                        <div class="kt-checkbox-list">
                            <label class="kt-checkbox">
                                <input type="checkbox" name="day" id="day1" value="1"> Monday <span></span>
                            </label>
                            <label class="kt-checkbox">
                                <input type="checkbox" name="day" id="day2" value="2"> Tuesday <span></span>
                            </label>
                            <label class="kt-checkbox">
                                <input type="checkbox" name="day" id="day3" value="3"> Wednesday <span></span>
                            </label>
                            <label class="kt-checkbox">
                                <input type="checkbox" name="day" id="day4" value="4"> Thursday <span></span>
                            </label>
                            <label class="kt-checkbox">
                                <input type="checkbox" name="day" id="day5" value="5"> Friday <span></span>
                            </label>
                            <label class="kt-checkbox">
                                <input type="checkbox" name="day" id="day6" value="6"> Saturday <span></span>
                            </label>
                            <label class="kt-checkbox">
                                <input type="checkbox" name="day" id="day7" value="7"> Sunday <span></span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group" style="margin-top :3%">
                    <label>Operation Time</label>
                    <div class="row" style="margin-top :1%">
                        <div class="col-12">
                            <div class="form-group row">
                                <div class="col-6">
                                    <input class="form-control" type="time" id="Start_time">
                                </div>
                                <div class="col-12">
                                    <label for="example-time-input" class="col-2 col-form-label">to</label>
                                </div>


                                <div class="col-6">
                                    <input class="form-control" type="time" id="End_time">
                                    <input type="url" class="form-control" style="visibility:hidden" id="ID">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-times"></i>Close</button>
    <button type="button" class="btn btn-info" id="btnAction" onclick="ActionButtionClick()"><i class="fa fa-save"></i>Save</button>
</div>




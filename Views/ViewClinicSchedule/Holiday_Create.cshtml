<script src="~/Content/assets/js/pages/crud/forms/widgets/bootstrap-datepicker.js" type="text/javascript"></script>
<!-- Modal -->

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel"><span><img src="~/Content/assets/media/med360/clinic.png" class="mr-3" style="width: 30px;"></span>Create Clinic Holiday</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">

    <div class="form-group row">
        <div class="col-md-2">
            <label>Speciality Clinic</label>
        </div>
        <div class="col-md-4">

            <select class="form-control">
                <option>Choose One</option>
                <option>Pulmonology</option>
                <option>Radiology</option>

            </select>
        </div>
        <div class="col-md-2">
            <label>Date</label>
        </div>
        <div class="col-md-4">
            <input class="form-control" type="date" value="" id="example-datetime-local-input">

        </div>
    </div>


    <div class="form-group row">

        <div class="col-md-2">
            <label>Holiday Type</label>
        </div>
        <div class="col-md-4">

            <select class="form-control">
                <option>Choose One</option>
                <option>All</option>
                <option>Gazetted Holiday</option>

            </select>
        </div>
        <div class="col-md-2">
            <label>Description</label>
        </div>
        <div class="col-md-4">
            <textarea class="form-control"></textarea>

        </div>
    </div>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-times"></i>Close</button>
    <button type="button" class="btn btn-info"><i class="fa fa-save"></i>Save</button>
</div>

@{

    ViewBag.PageName = "Internal Medicine Repository";
}

@section Styles{
    <link href="@Url.Content("~/Content/assets/vendors/custom/datatables/datatables.bundle.css")" rel="stylesheet" type="text/css" />


}

@section Scripts{

    <script src="~/Content/assets/vendors/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    @*<script src="~/Scripts/MedicineRepository/MedicineRepository.js" type="text/javascript"></script>*@
    <script src="~/Scripts/MedicineRepository/MedicineRepository.js" type="text/javascript"></script>
    @*<script type="text/javascript">*@


}



<!-- begin:: Content Head -->
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title"><span><img src="~/Content/assets/media/med360/Repository.png" class="mr-3" style="width: 30px;"></span>Internal Medicine Repository</h3>

    </div>
    
</div>
<!-- end:: Content Head -->
<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="kt-portlet">
        <div class="kt-portlet__body">
            <form class="kt-form">

                <div class="row align-items-center">
                    <div class="col-xl-12">
                        <div class="form-group m-form__group align-items-center">
                            <div class="input-group">
                                <input name="filterText" autoFocus
                                       class="form-control m-input"
                                       type="text" id="myInputTextField">
                                <span class="input-group-btn">
                                    <button class="btn btn-info"
                                            type="submit">
                                        <i class="flaticon-search-1" style="color:white;"></i>
                                    </button>
                                </span>
                            </div>
                        </div>

                    </div>
                </div>



            </form>
      

                        <div class="row align-items-center">
                            <div class="table-responsive">
                                <table class="table table-striped- table-bordered table-hover table-checkable"
                                       id="Medicine">
                                    <thead>
                                        <tr>
                                            <th>By Group</th>
                                            <th> Medicine Code</th>
                                            <th> Therapeutic Category</th>
                                            <th> Generic Names</th>
                                            <th> Formulations</th>

                                            <th> Service Level Category</th>


                                        </tr>
                                    </thead>
                                
                                </table>




                            </div>


                        </div>
</div>
    </div>
</div>
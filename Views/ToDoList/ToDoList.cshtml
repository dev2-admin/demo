<!-- begin:: Content Head -->
<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
        <h3 class="kt-subheader__title"><span><img src="~/Content/assets/media/med360/list.png" class="mr-3" style="width: 30px;"></span>To Do List</h3>

    </div>
    <div class="kt-subheader__toolbar">
        <button type="button" class="btn btn-brand btn-elevate btn-icon-sm" id="AddNew" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus"></i>Add New</button>
    </div>
</div>
<!-- end:: Content Head -->
<!-- begin:: Content -->
<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="row">
        <div class="col-md-12">
            <!--begin::Portlet-->
            <div class="kt-portlet kt-portlet--tab">
                <div class="kt-portlet__body">
                    <div class="row align-items-center">
                        <div class="col-xl-12">
                            <div class="form-group m-form__group align-items-center">
                                <div class="input-group">
                                    <input name="filterText" id="filterText" autoFocus class="form-control m-input" type="text">
                                    <span class="input-group-btn">
                                        <button class="btn btn-info" type="submit">
                                            <i class="flaticon-search-1" style="color:white"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!--begin::Section-->
                    <table class="table table-striped- table-bordered table-hover table-checkable" id="ToDoList">
                        <thead>
                            <tr>
                                <th>Actions</th>
                                <th>Task</th>
                                <th>Type</th>
                                <th>Reminder</th>

                            </tr>
                        </thead>

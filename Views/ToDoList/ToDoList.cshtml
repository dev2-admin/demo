                                </div>

                            </div>
                            <!-- -----------------begin::form--------------------------- -->

                        </div>*@
                </div>
            </div>
            <!--end::Portlet-->
        </div>


        <!-- --------Start Modal-------- -->
        <div id="myModal" class="modal fade" role="dialog" data-keyboard="false" data-backdrop="static">
            <div class="modal-dialog modal-lg">
                Change Request Information
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel"><span><img src="~/Content/assets/media/med360/list.png" class="mr-3" style="width: 30px;"></span> To Do List</h5>
                        <button type="button" class="close" data-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">

                        <div class="form-group form-group-last">
                            <label for="Add_task">Task</label>
                            <textarea class="form-control" id="Task" rows="4"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="exampleSelectd">Type</label>
                            <select class="form-control" id="Type">
                                @*<option>Chose one</option>
                                <option>Add Patient</option>
                                <option>Generate Appointment</option>*@
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleSelectd">Set Reminder</label>
                            <select class="form-control" id="Reminder">
                                @*<option>Chose one</option>
            <option>30 S</option>
            <option>40 S</option>*@
                            </select>
                            <input type="url" class="form-control" style="visibility:hidden" id="ID">
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-times"></i>Close</button>
                        <button type="button" id="btnAction" onclick="ActionButtionClick()" class="btn btn-info"><i class="fa fa-save"></i>Save</button>
                    </div>
                </div>

            </div>
        </div>
